{
  "name": "@livermore/trpc-config",
  "version": "1.0.0",
  "description": "Shared tRPC configuration for Livermore",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@clerk/backend": "^2.29.5",
    "@clerk/fastify": "^2.6.17",
    "@livermore/schemas": "workspace:*",
    "@livermore/utils": "workspace:*",
    "@trpc/server": "^11.0.0-rc.663",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  }
}
