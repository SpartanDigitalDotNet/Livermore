{
  "name": "@livermore/database",
  "version": "1.0.0",
  "description": "Database models and migrations for Livermore",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "seed": "tsx src/seed.ts",
    "studio": "drizzle-kit studio",
    "schema:inspect": "atlas schema inspect --env local --format '{{ sql . }}'",
    "schema:diff": "atlas schema diff --env local",
    "schema:apply": "atlas schema apply --env local",
    "schema:apply:dry": "atlas schema apply --env local --dry-run"
  },
  "dependencies": {
    "@livermore/schemas": "workspace:*",
    "@livermore/utils": "workspace:*",
    "drizzle-orm": "^0.36.4",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.28.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
