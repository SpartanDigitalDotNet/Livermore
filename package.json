{
  "name": "livermore",
  "version": "1.0.0",
  "private": true,
  "description": "Professional crypto trading monitoring system",
  "scripts": {
    "postinstall": "turbo run build",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test-setup": "tsx test-setup.ts",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:generate": "pnpm --filter @livermore/database generate",
    "db:migrate": "pnpm --filter @livermore/database migrate",
    "db:studio": "pnpm --filter @livermore/database studio"
  },
  "devDependencies": {
    "@turbo/gen": "^2.3.3",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.1",
  "pnpm": {
    "overrides": {
      "ioredis": "5.4.2"
    }
  }
}
